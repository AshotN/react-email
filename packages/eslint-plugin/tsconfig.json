{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "noErrorTruncation": true,
    "declaration": false,
    "module": "NodeNext",
    "types": ["vitest/globals"]
  },
  "exclude": ["dist", "build", "node_modules"]
}
