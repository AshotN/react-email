{
  "name": "@react-email/eslint-plugin",
  "version": "0.0.1-canary.0",
  "description": "Lint your emails for things that might be unsupported on different email clinets",
  "sideEffects": false,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./rules/no-base64-images": "./dist/no-base64-images.js",
    "./rules/no-unsupported-on-gmail-ios": "./dist/no-unsupported-on-gmail-ios.js",
    "./rules/no-partially-supported-on-gmail-ios": "./dist/no-partially-supported-on-gmail-ios.js"
  },
  "files": [
    "dist/**"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rollup --config=rollup.config.mjs --configPlugin=rollup-plugin-esbuild",
    "dev": "pnpm build --watch",
    "update:data": "tsx ./update-data.ts",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resendlabs/react-email.git",
    "directory": "packages/eslint-plugin"
  },
  "keywords": [
    "react",
    "email"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@typescript-eslint/utils": "6.19.1",
    "change-case": "4.1.1",
    "date-fns": "3.3.1",
    "esquery": "1.5.0",
    "js-yaml": "4.1.0",
    "parse-md": "3.0.3",
    "postcss": "8.4.32",
    "sync-fetch": "0.5.2",
    "tailwindcss": "3.4.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@babel/preset-react": "7.22.5",
    "@rollup/plugin-commonjs": "25.0.7",
    "@types/eslint": "8.44.7",
    "@types/html-to-text": "9.0.1",
    "@types/js-yaml": "4.0.9",
    "@types/pretty": "2.0.1",
    "@types/react": "18.2.33",
    "@types/sync-fetch": "0.4.3",
    "@typescript-eslint/rule-tester": "6.19.1",
    "eslint-config-custom": "workspace:*",
    "rollup": "4.4.1",
    "rollup-plugin-esbuild": "6.1.0",
    "tsconfig": "workspace:*",
    "tsx": "4.7.0",
    "typescript": "5.1.6",
    "vitest": "1.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
